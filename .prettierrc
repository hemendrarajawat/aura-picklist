{
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,app,page,component}",
            "options": {
                "parser": "html",
                "printWidth": 120,
                "singleQuote": true
            }
        }
    ]
}
